<div class="title"> {{ Lang.get('forum_title', 'forum') }} </div>{% for forum in forums %}<div class="post">{{ System.image('nav.png')|raw }} <a href="/forum/forum-{{ forum.id }}">{{ forum.name }}</a> {{ this.internalCounter(forum.id) }}{% if User.level() > 1 %}[<a href="/forum/actions-{{ forum.id }}?do=edit">+</a> | <a href="/forum/actions-{{ forum.id }}?do=delete">x</a>]{% endif %}{% if forum.desc is not empty %}<br/><span style="font-size: xx-small;"> &nbsp;{{ forum.desc }}</span>{% endif %}</div>{% else %}<div class="error">{{ Lang.get('forum_no_forums', 'forum') }}</div>{% endfor %}<div class="block">{% if User.level() > 1 %}{{ System.image('nav.png')|raw }} <a href="/forum/index/add_forum">{{ Lang.get('forum_add', 'forum') }}</a><br/>{% endif %}{{ System.image('back.png')|raw }} <a href="/">{{ Lang.get('mainpage') }}</a></div>