<div class="title">{{ topic.name }}</div>{% for post in posts %}<div class="post">	{{ User.nick(post.user_id) }} 	<small class="gray">({{ Filters.viewTime(post.time) }})</small> 	{% if User.loged() and topic.closed == 0 %}		<span style="float: right; font-size: small;">		{% if User.id() != post.user_id %}		[		<a href="/forum/posting-{{ topic.id }}?to_id={{ post.user_id }}">{{ Lang.get('forum_post_reply', 'forum') }}</a> 			|			<a href="/forum/posting-{{ topic.id }}?quote_id={{ post.id }}">{{ Lang.get('forum_post_quote', 'forum') }}</a>		]		{% endif %}				{% if User.level() > 1 or User.id() == post.user_id %}		[			<a href="/forum/edit_post-{{post.id}}">+</a> 			| 			<a href="/forum/edit_post-{{post.id}}?action=delete">x</a>		]		{% endif %}		</span>	{% endif %}	<br/>	{{ Filters.output(post.text)|raw }}</div>{% endfor %}{{ pages.view()|raw }}{{ this.fastForm()|raw }}{% if User.loged() %}<div class="block">{% if topic.closed == 0 %}{{ System.image('nav.png')|raw }} <a href="/forum/posting-{{topic.id}}">{{ Lang.get('forum_add_post', 'forum') }}</a><br/>{% endif %}{% if User.level() > 1 or User.id() == topic.user_id %}	{% if topic.closed == 0 %}		{{ System.image('nav.png')|raw }} <a href="/forum/topic_actions-{{ topic.id }}?do=close">{{ Lang.get('forum_close_topic', 'forum') }}</a><br/>	{% else %}		{{ System.image('nav.png')|raw }} <a href="/forum/topic_actions-{{ topic.id }}?do=open">{{ Lang.get('forum_open_topic', 'forum') }}</a><br/>	{% endif %}{% endif %}{% if User.level() > 1 %}	{% if topic.attach == 0%}		{{ System.image('nav.png')|raw }} <a href="/forum/topic_actions-{{ topic.id }}?do=pin">{{ Lang.get('forum_pin_topic', 'forum') }}</a><br/>	{% else %}		{{ System.image('nav.png')|raw }} <a href="/forum/topic_actions-{{ topic.id }}?do=unpin">{{ Lang.get('forum_unpin_topic', 'forum') }}</a><br/>	{% endif %}{{ System.image('nav.png')|raw }} <a href="/forum/topic_actions-{{ topic.id }}?do=delete">{{ Lang.get('forum_delete_topic', 'forum') }}</a><br/>{{ System.image('nav.png')|raw }} <a href="/forum/topic_actions-{{ topic.id }}?do=edit">{{ Lang.get('forum_edit', 'forum') }}</a>{% endif %}</div>{% endif%}<div class="block">{{ this.topicNav(topic.id)|raw }}{{ System.image('back.png')|raw }} <a href="/">{{ Lang.get('mainpage') }}</a></div>