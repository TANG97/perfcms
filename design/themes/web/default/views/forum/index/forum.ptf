<div class="title"> {{ forum_title }} </div>{% for forum in forums %}<div class="post">{{ System.image('nav.png')|raw }} <a href="/forum/section-{{ forum.id }}">{{ forum.name }}</a>{{ this.topicsCounter(forum.id) }} {% if User.level() > 1 %}[<a href="/forum/section_actions-{{ forum.id }}?do=edit">+</a> | <a href="/forum/section_actions-{{ forum.id }}?do=delete">x</a>]{% endif %}{% if forum.desc is not empty %}<br/><span style="font-size: xx-small;"> &nbsp;{{ forum.desc }}</span>{% endif %}</div>{% else %}<div class="error">{{ Lang.get('forum_no_subforums', 'forum') }}</div>{% endfor %}{{ pages.view() }}<div class="block">{% if User.level() > 1 %}{{ System.image('nav.png')|raw }} <a href="/forum/add_section-{{fid}}">{{ Lang.get('forum_add_section', 'forum') }}</a><br/>{% endif %}{{ System.image('back.png')|raw }} <a href="/forum">{{ Lang.get('forum_title', 'forum') }}</a><br/>{{ System.image('back.png')|raw }} <a href="/">{{ Lang.get('mainpage') }}</a><br/></div>